{
    "editor.formatOnSave": true,
    "editor.quickSuggestions": {
        "strings": true
    },
    "eslint.experimental.useFlatConfig": true,
    "eslint.workingDirectories": [
        {"pattern": "./apps/*"},
        {"pattern": "./packages/*"}
    ],
    "files.associations": {
        "*.css": "tailwindcss",
        "*.scss": "tailwindcss"
    },
    "tailwindCSS.classAttributes": ["class", "class:list", "className", "classNames", "ngClass", "ng-class"]
}
