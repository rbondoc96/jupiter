{
    "extends": "../../tsconfig.base.json",
    "include": ["src"],
    "compilerOptions": {
        // Project Environment
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "jsx": "preserve",
        "jsxImportSource": "solid-js",

        // Build
        "types": ["vite/client"],

        "plugins": [
            {
                "name": "typescript-plugin-css-modules",
                "options": {
                    "classnameTransform": "camelCaseOnly"
                }
            }
        ],
    }
}
