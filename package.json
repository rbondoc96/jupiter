{
    "name": "jupiter",
    "private": true,
    "type": "module",
    "author": "Rodrigo Bondoc",
    "description": "",
    "workspaces": [
        "apis/*",
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "@codercooks": "npm --workspace=\"codercooks\"",
        "@kratos-api": "npm --workspace=\"kratos-api\"",
        "@kratos-api:docker": "npm run @kratos-api run docker",
        "@kratos-web": "npm --workspace=\"kratos-web\"",
        "@next-template": "npm --workspace=\"next-template\"",
        "@react-components": "npm --workspace=\"@jupiter/react-components\"",
        "@react-primitives": "npm --workspace=\"@jupiter/react-primitives\"",
        "@react-resume": "npm --workspace=\"@jupiter/react-resume\"",
        "@react-template": "npm --workspace=\"react-template\"",
        "@web": "npm --workspace=\"@jupiter/web\"",
        "@www": "npm --workspace=\"www\"",
        "@www:deploy": "npm run @react-resume run build && npm run @react-components run build && npm run @react-primitives run build && npm run @www run build && npm @www run build",
        "@www-solid": "npm --workspace=\"www-solid\"",
        "check": "npm run check:lint && npm run check:types && npm run test",
        "check:lint": "turbo run check:lint",
        "check:types": "turbo run check:types",
        "init": "npm run init:git",
        "init:git": "git config --local include.path ../.gitconfig",
        "new:react-ts": "cd apps && cp -r react-template",
        "test": "turbo run test --filter=!./apis/kratos-api"
    },
    "devDependencies": {
        "@rollup/plugin-babel": "^6.0.4",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-replace": "^5.0.7",
        "@types/node": "^20.12.2",
        "@vitejs/plugin-react-swc": "^3.7.0",
        "concurrently": "^8.2.2",
        "nodemon": "^3.1.0",
        "npm-run-all": "^4.1.5",
        "prettier": "3.3.2",
        "rimraf": "^5.0.7",
        "rollup": "^4.18.0",
        "rollup-plugin-cleanup": "^3.2.1",
        "tsx": "^4.7.1",
        "turbo": "^1.13.0",
        "vite": "^5.3.3",
        "vitest": "^2.0.1"
    }
}
